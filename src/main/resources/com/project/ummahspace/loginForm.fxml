<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
    <children>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <!-- Sottotitolo -->
            <Label text="Accedi al tuo spazio spirituale." style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <!-- Campi di input -->
            <VBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
                <children>
                    <!-- Campo Email -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Email:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <TextField promptText="Inserisci la tua email" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Campo Password -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Password:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <PasswordField promptText="Inserisci la tua password" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Checkbox per Organizzatore -->
                    <CheckBox text="Sei un organizzatore?" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                </children>
            </VBox>

            <!-- Bottoni di Azione -->
            <HBox spacing="20" alignment="CENTER">
                <children>
                    <Button text="Login" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 50; -fx-border-radius: 5;" />
                    <Button text="Accedi con Facebook" style="-fx-background-color: #3b5998; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 50; -fx-border-radius: 5;" />
                </children>
            </HBox>

            <!-- Testo cliccabile per registrazione -->
            <Label text="Prima volta su UmmahSpace? Registrati in pochi istanti."
                   style="-fx-font-size: 14px; -fx-text-fill: #007bff; -fx-underline: true; -fx-cursor: hand;" />
        </VBox>
    </children>
</StackPane>
