<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
    <children>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <!-- Titolo -->
            <Label text="Crea il tuo account UmmahSpace" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <!-- Campi di input -->
            <VBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
                <children>
                    <!-- Nome -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Nome:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <TextField promptText="Inserisci il tuo nome" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Cognome -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Cognome:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <TextField promptText="Inserisci il tuo cognome" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Username -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Username:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <TextField promptText="Crea un username" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Email -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Email:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <TextField promptText="Inserisci la tua email" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Password -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Password:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <PasswordField promptText="Crea una password" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Conferma Password -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Conferma Password:" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                        <PasswordField promptText="Conferma la tua password" style="-fx-pref-width: 250px;" />
                    </HBox>

                    <!-- Checkbox per Organizzatore -->
                    <CheckBox text="Registrati come organizzatore" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                </children>
            </VBox>

            <!-- Bottone di Registrazione -->
            <Button text="Registrati" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 50; -fx-border-radius: 5;" />

            <!-- Testo cliccabile per tornare al login -->
            <Label text="Hai giÃ  un account? Accedi qui."
                   style="-fx-font-size: 14px; -fx-text-fill: #007bff; -fx-underline: true; -fx-cursor: hand;" />
        </VBox>
    </children>
</StackPane>
