<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import org.controlsfx.control.*?>

<StackPane style="-fx-background-color: #f4f4f4; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Contenitore principale -->
        <VBox alignment="CENTER" spacing="20">
            <!-- Barra superiore -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10;">
                <children>
                    <!-- Benvenuto Utente -->
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    <Pane HBox.hgrow="ALWAYS" /> <!-- Spaziatura dinamica -->
                    <!-- Bottoni Profilo e Tema -->
                    <Button fx:id="profileButton" style="-fx-font-size: 14px; -fx-background-color: #e0e0e0; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 5 15;" text="Profilo"/>
                    <Button style="-fx-font-size: 14px; -fx-background-color: #e0e0e0; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 5 15;" text="Tema" />
                </children>
            </HBox>

            <!-- Sezione Preghiere -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <children>
                    <!-- Preghiera Passata -->
                    <VBox alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-min-width: 200;">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Preghiera Passata" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Fajr - 05:30" />
                    </VBox>

                    <!-- Giorno Corrente -->
                    <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-min-width: 200;">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Oggi" />
                        <Label fx:id="dateLabel" style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Placeholder" />
                    </VBox>

                    <!-- Preghiera Futura -->
                    <VBox alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-min-width: 200;">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Preghiera Futura" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Zuhr - 12:15" />
                    </VBox>
                </children>
            </HBox>

            <!-- TabPane per alternare tra Calendario e Tracker Spirituale -->
            <TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
                <tabs>

                <!-- Tab del Calendario -->
                    <Tab closable="false" text="Calendario">
                        <content>
                            <VBox alignment="CENTER" spacing="20">
                                <!-- Contenitore del Calendario -->
                                <StackPane fx:id="calendarioContainer" />
                            </VBox>
                        </content>
                    </Tab>

                    <!-- Tab del Tracker -->
                    <Tab text="Tracker Spirituale">
                        <content>
                            <!-- Contenitore del Tracker -->
                            <StackPane fx:id="trackerContainer" />
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </children>
</StackPane>
