<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import org.controlsfx.control.*?>

<StackPane style="-fx-background-color: #f4f4f4; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.grafico.MainViewGUIController">
    <children>
        <!-- Contenitore principale -->
        <VBox alignment="CENTER" spacing="20">
            <!-- Barra superiore -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10;">
                <children>
                    <!-- Benvenuto Utente -->
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    <Pane HBox.hgrow="ALWAYS" /> <!-- Spaziatura dinamica -->
                    <!-- Bottoni Profilo e Impostazioni -->
                    <Button fx:id="profileButton" onAction="#onProfileButtonClicked" style="-fx-font-size: 14px; -fx-background-color: #e0e0e0; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 5 15;" text="Profilo" />

                    <Button style="-fx-font-size: 14px; -fx-background-color: #e0e0e0; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 5 15;" text="Tema" />
                </children>
            </HBox>

            <!-- Sezione Preghiere -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <children>
                    <!-- Preghiera Passata -->
                    <VBox alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-min-width: 200;">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Preghiera Passata" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Fajr - 05:30" />
                    </VBox>

                    <!-- Giorno Corrente -->
                    <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-min-width: 200;">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Oggi" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="16 Novembre 2024" />
                    </VBox>

                    <!-- Preghiera Futura -->
                    <VBox alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-min-width: 200;">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Preghiera Futura" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Zuhr - 12:15" />
                    </VBox>
                </children>
            </HBox>

            <!-- TabPane per alternare tra Calendario e Tracker Spirituale -->
            <TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
                <tabs>

                <!-- Tab del Calendario -->
                    <Tab closable="false" text="Calendario">
                        <content>
                            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                                <!-- Mese corrente -->
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Eventi di Novembre" />

                                <!-- GridPane del calendario -->
                                <GridPane fx:id="calendarGrid" style="-fx-hgap: 10; -fx-vgap: 10; -fx-padding: 10;">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="50" prefWidth="70" />
                                        <ColumnConstraints minWidth="50" prefWidth="70" />
                                        <ColumnConstraints minWidth="50" prefWidth="70" />
                                        <ColumnConstraints minWidth="50" prefWidth="70" />
                                        <ColumnConstraints minWidth="50" prefWidth="70" />
                                        <ColumnConstraints minWidth="50" prefWidth="70" />
                                        <ColumnConstraints minWidth="50" prefWidth="70" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="50" prefHeight="50" />
                                        <RowConstraints minHeight="50" prefHeight="50" />
                                        <RowConstraints minHeight="50" prefHeight="50" />
                                        <RowConstraints minHeight="50" prefHeight="50" />
                                        <RowConstraints minHeight="50" prefHeight="50" />
                                    </rowConstraints>
                                    <children>
                                        <!-- Giorni della settimana -->
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #999;" text="Lun" GridPane.columnIndex="0" />
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #999;" text="Mar" GridPane.columnIndex="1" />
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #999;" text="Mer" GridPane.columnIndex="2" />
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #999;" text="Gio" GridPane.columnIndex="3" />
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #999;" text="Ven" GridPane.columnIndex="4" />
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #999;" text="Sab" GridPane.columnIndex="5" />
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #999;" text="Dom" GridPane.columnIndex="6" />

                                        <!-- Esempi di giorni -->
                                        <StackPane style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                            <Label text="1" />
                                        </StackPane>
                                        <StackPane style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <Label text="2" />
                                        </StackPane>
                                        <StackPane style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                            <Label text="3" />
                                        </StackPane>
                                        <!-- Giorno con evento -->
                                        <StackPane style="-fx-background-color: #ffeb3b; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                            <Label style="-fx-font-weight: bold;" text="4" />
                                        </StackPane>
                                    </children>
                                </GridPane>
                            </VBox>
                        </content>
                    </Tab>

                    <Tab text="Tracker Spirituale">
                        <content>
                            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                            <VBox alignment="CENTER" spacing="20">
                                <!-- Titolo -->
                                <Label alignment="CENTER"
                                       maxHeight="-Infinity"
                                       maxWidth="-Infinity"
                                       minHeight="-Infinity"
                                       minWidth="-Infinity"
                                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 20 0 0 0;"
                                       text="Tracker Spirituale" />

                                <!-- Lettura del Corano -->
                                <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10;">
                                    <children>
                                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Lettura del Corano" />
                                        <ProgressBar fx:id="quranProgressBar" progress="0.0" style="-fx-pref-width: 300px; -fx-accent: gold;" />
                                        <Label fx:id="goalLabel" text="Obiettivo giornaliero: 0 pagine" />
                                        <Label fx:id="pagesReadLabel" text="Pagine lette: 0" />
                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                            <Button fx:id="setGoalButton" onAction="#onSetGoalClicked" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-border-radius: 5;" text="Imposta Obiettivo" />
                                            <Button fx:id="addReadingButton" onAction="#onAddReadingClicked" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-border-radius: 5;" text="Aggiungi Lettura" />
                                        </HBox>
                                    </children>
                                </VBox>
                                <!-- VBox per il Digiuno -->
                                <VBox prefHeight="199.0" prefWidth="660.0" spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10;">
                                    <children>
                                        <!-- Domanda e Switch -->
                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                            <children>
                                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Hai digiunato oggi?" />
                                                <ToggleSwitch fx:id="fastingSwitch" />
                                            </children>
                                        </HBox>

                                        <!-- Calendario -->
                                        <Label fx:id="calendarLabel" style="-fx-font-size: 12px; -fx-font-style: italic; -fx-text-fill: #666;" text="Data: 14 Gennaio 2025 / Rajab 1446" />

                                        <!-- Note -->
                                        <TextArea fx:id="fastingNotes" promptText="Aggiungi eventuali note..." style="-fx-pref-height: 60px; -fx-pref-width: 300px;" wrapText="true" />

                                        <!-- Eventi Digiuno -->
                                        <VBox prefHeight="67.0" prefWidth="638.0" spacing="10">
                                            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Motivazione:" />
                                            <HBox alignment="CENTER_LEFT" spacing="10">
                                                <CheckBox fx:id="sunnahCheckBox" text="Sunnah" />
                                                <CheckBox fx:id="makeUpCheckBox" text="Recupero di un digiuno" />
                                            </HBox>
                                            <HBox alignment="CENTER_LEFT" spacing="10">
                                                <CheckBox fx:id="specificVoluntaryCheckBox" text="Volontario Specifico" />
                                                <CheckBox fx:id="generalVoluntaryCheckBox" text="Volontario Generale" />
                                                <Region HBox.hgrow="ALWAYS" /> <!-- Per spingere il pulsante a destra -->
                                                <Button text="Salva" style="-fx-background-color: green; -fx-text-fill: white;" />
                                            </HBox>
                                        </VBox>

                                        <!-- HBox per motivazione e Salva -->
                                        <HBox spacing="10">
                                            <children>

                                                <!-- Spaziatore dinamico -->
                                                <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Preghiere -->
                                <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10;">
                                    <children>
                                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Preghiere" />
                                        <HBox alignment="CENTER" spacing="30">
                                            <children>
                                                <!-- Fajr -->
                                                <VBox alignment="CENTER" spacing="5">
                                                    <children>
                                                        <StackPane>
                                                            <Circle fx:id="fajrCircle" fill="#cccccc" radius="30" />
                                                            <Label fx:id="fajrCheck" style="-fx-font-size: 20px; -fx-text-fill: rgba(255, 255, 255, 0.5);" text="✔" />
                                                            <Button fx:id="fajrButton" style="-fx-background-color: transparent;" />
                                                        </StackPane>
                                                        <Label style="-fx-font-size: 14px;" text="Fajr" />
                                                    </children>
                                                </VBox>

                                                <!-- Dhuhr -->
                                                <VBox alignment="CENTER" spacing="5">
                                                    <children>
                                                        <StackPane>
                                                            <Circle fx:id="dhuhrCircle" fill="#cccccc" radius="30" />
                                                            <Label fx:id="dhuhrCheck" style="-fx-font-size: 20px; -fx-text-fill: rgba(255, 255, 255, 0.5);" text="✔" />
                                                            <Button fx:id="dhuhrButton" style="-fx-background-color: transparent;" />
                                                        </StackPane>
                                                        <Label style="-fx-font-size: 14px;" text="Dhuhr" />
                                                    </children>
                                                </VBox>

                                                <!-- Asr -->
                                                <VBox alignment="CENTER" spacing="5">
                                                    <children>
                                                        <StackPane>
                                                            <Circle fx:id="asrCircle" fill="#cccccc" radius="30" />
                                                            <Label fx:id="asrCheck" style="-fx-font-size: 20px; -fx-text-fill: rgba(255, 255, 255, 0.5);" text="✔" />
                                                            <Button fx:id="asrButton" style="-fx-background-color: transparent;" />
                                                        </StackPane>
                                                        <Label style="-fx-font-size: 14px;" text="Asr" />
                                                    </children>
                                                </VBox>

                                                <!-- Maghrib -->
                                                <VBox alignment="CENTER" spacing="5">
                                                    <children>
                                                        <StackPane>
                                                            <Circle fx:id="maghribCircle" fill="#cccccc" radius="30" />
                                                            <Label fx:id="maghribCheck" style="-fx-font-size: 20px; -fx-text-fill: rgba(255, 255, 255, 0.5);" text="✔" />
                                                            <Button fx:id="maghribButton" style="-fx-background-color: transparent;" />
                                                        </StackPane>
                                                        <Label style="-fx-font-size: 14px;" text="Maghrib" />
                                                    </children>
                                                </VBox>

                                                <!-- Isha -->
                                                <VBox alignment="CENTER" spacing="5">
                                                    <children>
                                                        <StackPane>
                                                            <Circle fx:id="ishaCircle" fill="#cccccc" radius="30" />
                                                            <Label fx:id="ishaCheck" style="-fx-font-size: 20px; -fx-text-fill: rgba(255, 255, 255, 0.5);" text="✔" />
                                                            <Button fx:id="ishaButton" style="-fx-background-color: transparent;" />
                                                        </StackPane>
                                                        <Label style="-fx-font-size: 14px;" text="Isha" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                        <HBox alignment="BOTTOM_RIGHT">
                                            <Region fx:id="spacer2" /> <!-- Per spingere il bottone a destra -->
                                            <Button style="-fx-background-color: green; -fx-text-fill: white;" text="Salva" />
                                        </HBox>
                                    </children>
                                </VBox>

                            </VBox>
                            </ScrollPane>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </children>
</StackPane>
