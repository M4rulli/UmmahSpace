<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-width: 500;">
            <!-- Titolo -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Modifica Evento" />

            <!-- Form Profilo Utente -->
            <VBox alignment="CENTER" spacing="10">
                <!-- Titolo -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Titolo:" />
                    <TextField fx:id="titoloField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="Titolo" />
                </VBox>

                <!-- Descrizione -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Descrizione:" />
                    <TextArea fx:id="descrizioneArea" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="Descrizione" />
                </VBox>

                <!-- Data -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Data:" />
                    <TextField fx:id="dataField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="26-01-2025" />
                </VBox>

                <!-- Orario -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox alignment="CENTER_LEFT" spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Orario Inizio:" />
                        <TextField fx:id="orarioInizioField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="11:00" />
                    </VBox>
                    <VBox alignment="CENTER_LEFT" spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Orario Fine:" />
                        <TextField fx:id="orarioFineField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="12:00" />
                    </VBox>
                </HBox>
            </VBox>

            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Limite Partecipanti:" />
                <TextField fx:id="limitePartecipantiField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="Numero partecipanti" />
            </VBox>



            <!-- Sezione Pulsanti -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10; -fx-margin-top: 20;">
                <children>
                    <Button fx:id="editButton" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Modifica" />
                    <Button fx:id="saveButton" disable="true" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Salva Modifiche" />
                    <Button fx:id="chiudiEventoButton" text="Chiudi Evento"
                            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                    <Button fx:id="backButton" disable="true" style="-fx-background-color: grey; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Indietro" />
                </children>
            </HBox>
        </VBox>
    </children>
</StackPane>
