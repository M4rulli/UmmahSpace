<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.grafico.ModificaEventoGUIController"
      style="-fx-padding: 20;">
    <TextField fx:id="titoloField" promptText="Titolo Evento" />
    <TextField fx:id="orarioField" promptText="Orario (es. 10:30)" />
    <HBox spacing="10">
        <Button fx:id="salvaButton" text="Salva" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
        <Button fx:id="annullaButton" text="Annulla" style="-fx-background-color: #dc3545; -fx-text-fill: white;" />
    </HBox>
</VBox>