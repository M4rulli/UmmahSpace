<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.grafico.ModificaEventoGUIController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-width: 500;">
            <!-- Titolo -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Modifica Evento" />

            <!-- Form Modifica Evento -->
            <GridPane fx:id="eventGrid" alignment="CENTER" hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150" />
                    <ColumnConstraints halignment="LEFT" prefWidth="250" />
                </columnConstraints>
                <children>
                    <!-- Titolo -->
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Titolo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="titleField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="Evento Importante" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Descrizione -->
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Descrizione:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextArea fx:id="descriptionField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="Descrizione dell'evento" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Data -->
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <DatePicker fx:id="dateField" style="-fx-padding: 5;" value="2025-01-25" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Orario -->
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Orario:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="timeField" style="-fx-padding: 5; -fx-background-color: #f4f4f4;" text="14:30" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </children>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <!-- Sezione Pulsanti -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <children>
                    <!-- Pulsante Salva Modifiche -->
                    <Button fx:id="saveButton" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Salva Modifiche" onAction="#onSalvaModifiche"/>

                    <!-- Pulsante Annulla -->
                    <Button fx:id="cancelButton" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Annulla" onAction="#onAnnulla"/>
                </children>
            </HBox>
        </VBox>
    </children>
</StackPane>
